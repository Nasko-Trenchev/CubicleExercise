           <h1>{{cube.name}}</h1>
            <img class="cube" src="{{cube.imageUrl}}">
            <div class="details">
                <p><span>Description:</span>{{cube.description}}</p>
                <p><span>Difficulty level:</span>{{cube.difficultyLevel}}</p>
                <a class="btn" href="/">Back</a>
                <a class="btn" href="/cubes/{{cube._id}}/attach">Attach</a>
                {{#if isOwner}}
                <a class="btn" href="/cubes/{{cube._id}}/edit">Edit</a>
                <a class="btn" href="/cubes/{{cube._id}}/delete">Delete</a>
                {{/if}}
            </div>
            <h2>Accessories</h2>
            {{#if cube.accessories}}
            {{#each cube.accessories}}
            <div class="accessories">
                <div class="accessory">
                    <img src="{{this.imageUrl}}" alt="stickerName">
                    <h3>{{this.name}}</h3>
                    <p>{{this.description}}</p>
                </div>
            {{/each}}
            {{else}}
                <h3 class="italic">This cube has no accessories yet...</h3>
            {{/if}}
</div>